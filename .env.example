# =============================================
# SAAS WHATSAPP BOT ENVIRONMENT VARIABLES
# =============================================

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="WhatsApp SaaS Bot"

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_... # Live: sk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_... # Live: pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_... # From Stripe webhook endpoint

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_STARTER_MONTHLY_PRICE_ID=price_1234... 
STRIPE_STARTER_YEARLY_PRICE_ID=price_1234...
STRIPE_PRO_MONTHLY_PRICE_ID=price_1234...
STRIPE_PRO_YEARLY_PRICE_ID=price_1234...
STRIPE_BUSINESS_MONTHLY_PRICE_ID=price_1234...
STRIPE_BUSINESS_YEARLY_PRICE_ID=price_1234...
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_1234...
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_1234...

# WhatsApp API (WAHA)
WAHA_BASE_URL=http://localhost:3000/api/waha
WAHA_API_KEY=your_waha_api_key
NEXT_PUBLIC_WHATSAPP_SESSION_NAME=default

# Email Configuration (für Team-Einladungen und Benachrichtigungen)
# Für Gmail: Verwenden Sie App-Passwörter (https://myaccount.google.com/apppasswords)
# Für andere Anbieter: Verwenden Sie die jeweiligen SMTP-Einstellungen
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_NAME="WhatsApp Dashboard"

# Security
NEXTAUTH_SECRET=your_super_secret_jwt_secret_here
ENCRYPTION_KEY=32_character_encryption_key_here

# Feature Flags
NEXT_PUBLIC_ENABLE_BILLING=true
NEXT_PUBLIC_ENABLE_TEAM_FEATURES=true
NEXT_PUBLIC_ENABLE_API_ACCESS=true
NEXT_PUBLIC_ENABLE_WEBHOOKS=true

# Security Feature Flags (IMPORTANT: Test thoroughly before enabling in production!)
ENABLE_CSRF_PROTECTION=false  # Set to true only after implementing CSRF token handling in frontend
ENABLE_ADVANCED_RATE_LIMITING=true
ENABLE_PRODUCTION_LOGGING=false  # Detailed logging in production

# Deployment Safety
IS_STAGING=false  # Set to true for staging environment
ALLOW_EXPERIMENTAL_FEATURES=false  # Only enable in development/staging

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false